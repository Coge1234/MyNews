<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_white"
                android:orientation="vertical" >
    <include
        android:id="@+id/include_top_bar"
        layout="@layout/find_top_bar_layout" />
    <ImageView
        android:id="@+id/about_img_top_icon"
        android:layout_width="90dip"
        android:layout_height="90dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dip"
        android:layout_below="@id/include_top_bar"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/about_tv_top_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_img_top_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dip"
        android:text="麦新闻"
        android:textColor="@color/color_black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/about_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_tv_top_name"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="15dip"
        android:text="麦新闻安卓客户端-是一个仿照36Kr官方App,获取36Kr数据的资讯类新闻客户端
包括首页新闻,详情,发现,活动,侧滑效果,第三方登录以及分享,消息推送等相关功能客户端。"
        android:textColor="@color/color_head_title"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/about_tv_bottom_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dip"
        android:text="JoChen.Pan"
        android:textColor="@color/color_head_title" />

    <TextView
        android:id="@+id/about_tv_bottom_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/about_tv_bottom_right"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="3dip"
        android:text="Copyright ©2015-2016"
        android:textColor="@color/color_head_title" />

</RelativeLayout>